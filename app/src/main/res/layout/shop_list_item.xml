<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/shop_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/BlackFont"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp" />

        <com.arrowgame.view.PriceView
            android:id="@+id/shop_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BlackFont"
            android:layout_marginRight="10dp"
            android:textSize="30sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/shop_item_more"
        android:visibility="gone"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/shop_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/GreyFont"
            android:textSize="23sp"
            android:layout_margin="4dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/shop_item_first_button"
            android:layout_width="60dp"
            android:layout_height="35dp"
            style="@style/FontShadow"
            android:background="@drawable/button_selector"
            android:text="Buy"
            android:textSize="18sp"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/shop_item_second_button"
            android:layout_width="60dp"
            android:layout_height="35dp"
            style="@style/FontShadow"
            android:background="@drawable/button_selector"
            android:text="Equip"
            android:textSize="18sp"
            android:layout_margin="4dp"/>
    </LinearLayout>

</LinearLayout>